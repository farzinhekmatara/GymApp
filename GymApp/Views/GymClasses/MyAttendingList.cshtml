@model IEnumerable<GymApp.Models.GymClassViewModel>

     <h1>Index</h1>

      <div class="row">
           <div class="col-4  p-5"><h3><a asp-action="Create">Create</a></h3></div>
           <div class="col-4  p-5"><h3><a asp-action="SearchItemInList">All workout</a></h3></div>
           <div class="col-4  p-5"><h3><a asp-action="GoToMyList">Reserved workout</a></h3></div>
       </div>
       
@if (TempData["Message"] != null)
{
<div class="row pt-4">
        <div class="col-12">
	       <div class="alert alert-primary text-center">
	          <strong>@TempData["Message"]</strong>
	       </div>
        </div>
    </div>
}
<table class="table">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attending)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attending)
            </td>
           
        </tr>
}
    </tbody>
</table>